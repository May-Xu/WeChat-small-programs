<form bindsubmit="up_img">
  <text decode="true">\n\n\n\n\n\n\n</text>
  <view class="container">
    <view class="biankuang">
      <view class="cells cells_after-title" style='margin-top: 5px;' >
        <view class='cell'>
          <view class="cell__bd">
            <textarea class="textarea" placeholder="说点什么吧......" style="height: 7em" value='{{details}}' bindblur='bindTextAreaBlur' maxlength='60' name='details'/>
          </view>
        </view>
      </view>
    </view>

    <view class="anniu">
      <button type="primary" class="tijiao" form-type="submit">提交</button>
      <button type="primary" class="chongzhi" form-type="reset" plain="true" bindtap="reset">重置</button>
    </view>
  </view>
</form>